{
  "version": 2,
  "buildCommand": "rm -rf node_modules/recharts && mkdir -p node_modules/recharts && echo \"module.exports = {};\" > node_modules/recharts/index.js && NODE_OPTIONS='--max-old-space-size=4096' next build",
  "installCommand": "npm ci --omit=dev --no-audit --no-fund --ignore-scripts",
  "framework": null,
  "outputDirectory": ".next",
  "env": {
    "NEXT_PUBLIC_SUPABASE_URL": "${NEXT_PUBLIC_SUPABASE_URL}",
    "NEXT_PUBLIC_SUPABASE_ANON_KEY": "${NEXT_PUBLIC_SUPABASE_ANON_KEY}",
    "NEXT_PUBLIC_APP_ENV": "production",
    "NODE_ENV": "production",
    "NEXT_DISABLE_SOURCEMAPS": "1",
    "NEXT_TELEMETRY_DISABLED": "1"
  },
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next",
      "config": {
        "maxLambdaSize": "15mb"
      }
    }
  ]
} 